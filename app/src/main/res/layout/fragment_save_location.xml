<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ara.kuet.musta.SaveLocation"
    android:background="@drawable/unnamed"
    android:padding="10sp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rlayout"
            android:gravity="center"
            android:padding="20sp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save Location"
                android:id="@+id/bSave"
                android:background="@drawable/mybutton"
                android:padding="2dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Delete Location"
                android:id="@+id/bdelete"
                android:background="@drawable/myclock_sunrise"
                android:layout_marginTop="5sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="My Saved Location"
                android:layout_marginTop="5sp"
                android:background="@drawable/savedlocation"
                android:textSize="25sp"
                android:gravity="center"
                android:padding="3sp" />

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/innerlay"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:background="@drawable/innerlay">
            </LinearLayout>

        </LinearLayout>
        </ScrollView>


</RelativeLayout>
